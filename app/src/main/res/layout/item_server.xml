<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    xmlns:livebutton="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/server_ip_address"
        android:fontFamily="@font/gouranga_pixel_font"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_height="match_parent"
        android:text="192.168.0.254:8088"/>

    <itacademy.snowadv.fightinggamep2p.UI.FlatButton
        android:id="@+id/join_button"
        android:fontFamily="@font/gouranga_pixel_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:gravity="center"
        livebutton:layout_constraintEnd_toEndOf="parent"
        livebutton:layout_constraintTop_toTopOf="parent"
        livebutton:layout_constraintBottom_toBottomOf="parent"

        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginEnd="5dp"
        livebutton:shadowEnabled="true"
        android:text=" Войти "
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>